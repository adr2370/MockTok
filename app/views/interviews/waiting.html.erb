<h1>Currently finding a match, hang tight!<p>

<% if @interview_timespan %>
	<script>
	// if current user is interviewEE, ping server every 5 seconds with findOpenInterview, which renders interviewee-show when done
	setInterval(function(){findOpenInterview()},5000)
	function findOpenInterview()
	{
		$.ajax({ type: "POST", url: "/interviews/findOpenInterview", data: { timespan: @interview_timespan }
			}).done(function(html) {});
	}
	</script>
<% else %>
	<script>
	// if current user is interviewER, ping server every 5 seconds with goToInterviewIfReady, which renders interviewer-show IF found 
	setInterval(function(){goToInterviewIfReady()},5000)
	function goToInterviewIfReady()
	{
		$.ajax({ type: "POST", url: "/interviews/goToInterviewIfReady", data: { interview_id: @interview_id }
			}).done(function(html) {});
	}
	</script>
<% end %>
