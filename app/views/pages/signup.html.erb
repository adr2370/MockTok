<script type="text/javascript">
  		var accessToken=decodeURI((RegExp('[#|&]access_token=' + '(.+?)(&|$)').exec(location.hash)||[,null])[1]);
      var userId;
			if(accessToken!="null") {
				$.get("https://api.singly.com/profile?access_token="+accessToken, function(data){
					userId=data.id;
          window.location.href="/users/login_or_create/?accessToken="+accessToken+"&userId="+userId;
				});
			}
</script>
    
