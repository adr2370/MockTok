<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>
			Mock · Tok
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content=""><!-- Le styles -->
		<link href="/assets/bootstrap.min.css" rel="stylesheet" media="screen" type="text/css">
		<style type="text/css">
	body {
				padding-top: 20px;
				padding-bottom: 40px;
			}

			/* Custom container */
			.container-narrow {
				margin: 0 auto;
				max-width: 700px;
			}
			.container-narrow > hr {
				margin: 30px 0;
			}

			/* Main marketing message and sign up button */
			.jumbotron {
				margin: 42px 0;
				text-align: center;
			}
			.jumbotron h1 {
				font-size: 72px;
				line-height: 1;
			}
			.jumbotron .btn {
				font-size: 21px;
				padding: 14px 24px;
			}

			/* Supporting marketing content */
			.marketing {
				margin: 60px 0;
			}
			.marketing p + h4 {
				margin-top: 28px;
			}
			
			/*Hides the create acount info*/
			.hide-me {
				display:none;     
			}
			#myModal{
				height: 450px;
				width: 800px;
			}
			
		</style>
		<link href="/assets/bootstrap-responsive.css" rel="stylesheet" type="text/css"><!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<!-- Fav and touch icons -->
		<link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/ico/apple-touch-icon-144-precomposed.png">
		<link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/ico/apple-touch-icon-114-precomposed.png">
		<link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/ico/apple-touch-icon-72-precomposed.png">
		<link rel="apple-touch-icon-precomposed" href="/assets/ico/apple-touch-icon-57-precomposed.png">
		<link rel="shortcut icon" href="/assets/ico/favicon.png">
	</head>
	<body>
		<div class="container-narrow">
			<div class="masthead">
				<ul class="nav nav-pills pull-right">
					<li>
						<a href="#myModal" data-toggle="modal">About Us</a>
					</li>
				</ul>
				<h3 class="muted">
					MockTok
				</h3>
			</div>
			<hr>
			<div class="jumbotron">
				<h1>
					Conquer Your Fear Of Interviews!
				</h1>
				<p class="lead">
					Walk into your next job interview feeling confident after using our webservice.
				</p><iframe src="http://player.vimeo.com/video/57094153?title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff" width="600" height="337" frameborder="0" webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen=""></iframe><br>
				<br>
				<br>
				<hr>
				<br>
				<div id="login_wrapper">
					<a class="btn btn-large btn-success" href="#" id="SignUpBtn" name="SignUpBtn">Sign in with GitHub</a>
				</div>
				<div id="interview_wrapper" style="display:none;">
					<%= form_for(@interview) do |f| %>
					  <% if @interview.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@interview.errors.count, "error") %> prohibited this interview from being saved:</h2>
					      <ul>
					      <% @interview.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>

						<select id="time" name="interview[expected_time]" style="width: 56px;font-size: 18px;">
							<option selected="selected">
								15
							</option>
							<option>
								20
							</option>
							<option>
								30
							</option>
							<option>
								45
							</option>
							<option>
								60
							</option>
						</select>
						<span style="position: relative;top: -2px;margin-left: 9px;font-size: 18px;">minutes</span>
						<br>

					  <%= f.hidden_field :waiting, :value => true %>
						<br>
						<input type="submit" class="btn btn-large btn-primary" name="role" value="Interviewee">
						<input type="submit" class="btn btn-large btn-danger" name="role" value="Interviewer" style="margin-left: 50px;">
					<% end %>
				</div>
			</div><!--Area for the buttons used for sign up-->
			<div class="hide-me" id="LoginInfo"></div>
			<hr>
			<div class="row-fluid marketing">
				<div class="span6">
					<h4>
						<img src="/assets/LiveChat.png" height="40" width="30">&nbsp; LiveChat
					</h4>
					<p>
						Video talk with fellow MockTokers in a face-to-face interview similuation.
					</p>
				</div>
				<div class="span6">
					<h4>
						<img src="/assets/LiveEdit.png" height="40" width="30">&nbsp; LiveText
					</h4>
					<p>
						Ask and answer the nitty gritty coding questions with our real time text editor.
					</p>
				</div>
			</div>
			<div class="row-fluid marketing">
				<div class="span6">
					<h4>
						<img src="/assets/Play.png" height="40" width="30">&nbsp; Play Back
					</h4>
					<p>
						Save your interviews to review at a later time.
					</p>
				</div>
				<div class="span6">
					<h4>
						<img src="/assets/Review.png" height="40" width="30">&nbsp; Review
					</h4>
					<p>
						Gain valuable feedback on your abilities to answer and ask questions.
					</p>
				</div>
			</div>
			<hr>
			<div class="footer">
				<p>
					© Mocktok 2013
				</p>
			</div>
		</div><!-- /container -->
		<script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>
		<script src="/assets/bootstrap.min.js" type="text/javascript"></script>
		<script type="text/javascript">
var singlyLogin = function() {
		window.location.href='https://api.singly.com/oauth/authorize?client_id=fbe8f4a0df06ac78b9152a1710914fef&service=github&redirect_uri=http://'+window.location.host+window.location.pathname+'&response_type=token';
		};
			var accessToken=decodeURI((RegExp('[#|&]access_token=' + '(.+?)(&|$)').exec(location.hash)||[,null])[1]);
			var userId;
			if(accessToken!="null") {
				$("#SignUpBtn").removeClass('btn-success');
				$.get("https://api.singly.com/profile?access_token="+accessToken, function(data){
					userId=data.id;
					$.get("/users/login_or_create/?accessToken="+accessToken+"&userId="+userId).complete(function() {
						$("#login_wrapper").hide();
						$("#interview_wrapper").show();
						$('html, body').scrollTop($("#interview_wrapper").offset().top)
					}).error(function() {
							$("#SignUpBtn").addClass('btn-success').click(singlyLogin);
					});
				});
			} else {
				$("#SignUpBtn").click(singlyLogin);
			}

		</script><!-- Le javascript
		================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
	</body>
</html>
